{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ 
      "es6"
    ],
    "outDir": "./dist/out-tsc",
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": [ 
    "node_modules",
    "coverage"
   ]
}